"""
Main entry point voor Firebase Functions API
Clean, minimale setup - routing gebeurt in lib/router.py
"""
from firebase_functions import https_fn, options
from firebase_admin import initialize_app

# Import router
from lib.router import route_request

# Initialize Firebase Admin SDK
initialize_app()


@https_fn.on_request(
    region="europe-west1",
    memory=options.MemoryOption.MB_256,
    max_instances=10
)
def api(req: https_fn.Request) -> https_fn.Response:
    """
    Main API entry point for all /api/** routes
    Routes naar specifieke handlers via router
    """
    return route_request(req)
